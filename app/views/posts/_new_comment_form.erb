<%= form_for @comment, :url => { :controller => "posts", :action => "create_comment"} , :html => { :class => 'form-horizontal col-lg-12' } do |f| %>
    <div class="container">
      <%= f.hidden_field :post_id, :value => params[:id] %>
      <div class="form-group">
        <%= f.label :content, :class=>"col-lg-4 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :content, :class=>"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-8 col-lg-offset-4">
          <%= f.submit :class=>"btn btn-primary" %>
        </div>
      </div>
    </div>
<% end %>